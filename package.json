{
  "name": "meteor-4pi",
  "version": "1.2.2",
  "author": "Daan van der Munnik (https://github.com/grmbl99)",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "test": "meteor test --once --driver-package meteortesting:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --extra-packages bundle-visualizer",
    "spell-interact": "mdspell --en-us --ignore-numbers --ignore-acronyms '**/*.md' '!node_modules/**/*.md' '!CHANGELOG.md'",
    "lint:spell": "mdspell --en-us -n -a -r '**/*.md' '!node_modules/**/*.md' '!CHANGELOG.md'",
    "lint:md": "markdownlint '**/*.md'",
    "lint:es": "eslint '*/**/*.{js,ts,tsx}'",
    "lint:ts": "tsc --noEmit"
  },
  "dependencies": {
    "@babel/runtime": "^7.14.6",
    "@types/jest": "^26.0.24",
    "@types/meteor": "^1.4.74",
    "@types/node": "^16.4.0",
    "@types/react": "^17.0.14",
    "@types/react-datepicker": "^4.1.3",
    "@types/react-dom": "^17.0.9",
    "azure-devops-node-api": "^11.0.1",
    "date-fns": "^2.22.1",
    "meteor-node-stubs": "^1.1.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-datepicker": "^4.1.1",
    "react-dnd": "^14.0.2",
    "react-dnd-html5-backend": "^14.0.0",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.11.1",
    "typescript": "^4.3.5"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.jsx",
      "server": "server/main.js"
    }
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "markdown-spellcheck": "^1.3.1",
    "markdownlint-cli": "^0.27.1",
    "prettier": "^2.3.2",
    "semantic-release": "^17.4.4",
    "sinon": "^1.17.7"
  },
  "release": {
    "branches": [
      "main"
    ],
    "npmPublish": false,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogTitle": "# Meteor-4PI"
        }
      ],
      "@semantic-release/github",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ]
        }
      ]
    ]
  }
}
